        compile 'com.zyao89:zloading:1.0.5'

        dialog = new ZLoadingDialog(mContext);
        dialog.setLoadingBuilder(Z_TYPE.CIRCLE_CLOCK)//设置类型
                .setLoadingColor(Color.parseColor("#FF4081"))//颜色
                .setHintText("Loading...")
                .setCanceledOnTouchOutside(false)
                .setCancelable(false);